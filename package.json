{
  "name": "zelda-js",
  "description": "Link collector and decorator for text content",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha $(find . -name \"*.spec.js\" -not -path \"./node_modules/*\")",
    "code-style": "eslint $(find . -name \"*.js\" -not -path \"./node_modules/*\")",
    "validate-commit-msg": "validate-commit-msg",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "release": {
    "verifyConditions": {
      "path": "./node_modules/semantic-release/dist/lib/plugin-noop.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emartech/zelda-js.git"
  },
  "author": "Adam Brunner <adam.brunner@emarsys.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/emartech/zelda-js/issues"
  },
  "pre-commit": [
    "code-style",
    "validate-commit-msg"
  ],
  "homepage": "https://github.com/emartech/zelda-js",
  "dependencies": {},
  "devDependencies": {
    "chai": "3.4.1",
    "eslint": "1.10.3",
    "eslint-config-emarsys": "2.0.0",
    "mocha": "2.3.4",
    "pre-commit": "1.1.2",
    "semantic-release": "4.3.5",
    "validate-commit-message": "3.0.1"
  }
}
